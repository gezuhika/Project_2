<div id="home">
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <h1>{{msg}}</h1>
                <h2>Welcome to ShredShare!</h2>
                <form class="clearfix mb-4" action="/api/examples" method="POST">
                    <div class="form-group">
                        <label for="example-text">Drivers Full Name</label>
                        <input type="text" id="form-data" class="form-control" aria-describedby="example-text"
                            placeholder="John Doe">
                    </div>
                    <div class="form-group">
                        <label for="example-description">Vehicle Year/Make/Model</label>
                        <input class="form-control" id="form-description" aria-describedby="example-description"
                            placeholder="2009 Subaru WRX"></input>
                    </div>
                    <div class="form-group">
                        <label for="example-description">Address You Are Departing From</label>
                        <input type="text" class="form-control" id="departure" aria-describedby="example-description"
                            placeholder="1634 18th St. Denver, Co 80202"></input>
                    </div>
                    <div class="form-group">
                        <label for="example-description">Address of Destination</label>
                        <input class="form-control" id="destination" aria-describedby="example-description"
                            placeholder="69 Wood Rd. Snowmass Village, Co 81615"></input>
                    </div>
                    <div class="form-group">
                        <label for="example-description">Departure Time</label>
                        <input type="time" class="form-control" id="departTime" aria-describedby="example-description"
                            placeholder="7:30pm"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="example-description">Number of Available Seats</label>
                        <input class="form-control" id="seats" aria-describedby="example-description"
                            placeholder="1"></input>
                    </div>
                    <button id="submit" class="btn btn-primary float-right" data-toggle="modal"
                        data-target="#submitModal">Submit</button>
                </form>
                <a href="/">‚Üê Back To Home</a>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="submitModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modal-title"></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h5 id="modalHeading"></h5>
                <p id="modalParagraph"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


