<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" action="/api/examples" method="POST">
          <div class="form-group">
            <label for="example-text">Drivers Full Name</label>
            <input type="text" id="form-data" class="form-control" aria-describedby="example-text" placeholder="Enter Example Text">
          </div>
          <div class="form-group">
            <label for="example-description">Vehicle Year/Make/Model</label>
            <input class="form-control" id="form-description" aria-describedby="example-description" placeholder="Enter Example Description"></input>
          </div>
          <div class="form-group">
            <label for="example-description">Address You Are Departing From</label>
            <textarea class="form-control" id="departure" aria-describedby="example-description" placeholder="Enter Example Description"></textarea>
          </div>
          <div class="form-group">
            <label for="example-description">Address of Destination</label>
            <textarea class="form-control" id="destination" aria-describedby="example-description" placeholder="Enter Example Description"></textarea>
          </div>
          <div class="form-group">
            <label for="example-description">Departure Time</label>
            <input class="form-control" id="departTime" aria-describedby="example-description" placeholder="Enter Example Description"></textarea>
          </div>
          <div class="form-group">
            <label for="example-description">Number of Available Seats</label>
            <input class="form-control" id="seats" aria-describedby="example-description" placeholder="Enter Example Description"></input>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Examples:</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
